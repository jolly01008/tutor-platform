<div class="container">
  <h1 class="text-center mt-5">Admin Sign In</h1>
  <form action="/admin/signin" method="POST">
    <div class="d-flex justify-content-center">
      <div class="col-6 d-flex flex-column">

        <div class="row mb-3">
          <label for="email" class="row form-label">信箱</label>
          <input type="email" name="email" class="form-control" id="email" placeholder="Email" value="{{email}}"
            required>
        </div>
        <div class="row mb-3">
          <label for="password" class="row form-label">密碼</label>
          <input type="password" name="password" class="form-control" id="password" placeholder="password"
            value="{{password}}" required>
        </div>

        <div class="row mt-2">
          <button type="submit" class="btn btn-primary">登入</button>
        </div>
        <div class="mt-5 text-center">
          <a href="javascript:history.back(-1)">返回前一頁</a>
        </div>

      </div>
    </div>
  </form>

</div>